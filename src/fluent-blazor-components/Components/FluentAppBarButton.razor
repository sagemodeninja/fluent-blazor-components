                       icon="@Icon"
                       label="@Label"
                       data-command=@Command
                       appearance=@(Appearance?.ToString().ToLower() ?? "right")
                       modifier="@Modifier"
                       key="@Key"
                       @attributes="@AdditionalAttributes">
    @ChildContent
